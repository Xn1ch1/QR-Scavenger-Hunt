<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appBackGroundDarker">

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:contentDescription="@string/num1"
        android:fontFamily="@font/advent_pro_light"
        android:padding="@dimen/setClueInputPadding"
        android:text="@string/num1"
        android:textColor="@color/textColorLighter"
        android:textSize="@dimen/setCluesRowNumberSize"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/num1"
        android:ellipsize="end"
        android:fontFamily="@font/advent_pro_light"
        android:gravity="start"
        android:maxEms="1"
        android:maxLines="3"
        android:padding="@dimen/setClueInputPadding"
        android:text="@string/clueNotSet"
        android:textColor="@color/textColorLighter"
        android:textSize="@dimen/setClueTextSize"
        app:layout_constraintBottom_toTopOf="@+id/divide"
        app:layout_constraintEnd_toStartOf="@+id/codeCheck"
        app:layout_constraintStart_toEndOf="@+id/number"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/textCheck"
        android:layout_width="@dimen/setClueButtonSize"
        android:layout_height="@dimen/setClueButtonSize"
        android:padding="@dimen/setClueRowButtonPadding"
        android:src="@drawable/set_clue_clue_text_unchecked"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/codeCheck" />

    <ImageView
        android:id="@+id/codeCheck"
        android:layout_width="@dimen/setClueButtonSize"
        android:layout_height="@dimen/setClueButtonSize"
        android:padding="@dimen/setClueRowButtonPadding"
        android:src="@drawable/set_clue_scan_unchecked"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/divide"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/darkOverlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>